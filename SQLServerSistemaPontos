CREATE DATABASE CONTROLEO_PONTO;
USE CONTROLEO_PONTO;

CREATE TABLE FUNCIONARIOS (
    FUNCIONARIO_ID INT IDENTITY(1,1) PRIMARY KEY,
    NOME NVARCHAR(100),                           
    CARGO NVARCHAR(50)
);

CREATE TABLE PONTO (
    PONTO_ID INT IDENTITY(1,1) PRIMARY KEY,       
    FUNCIONARIO_ID INT,                           
    DATA DATE,                                   
    HORA_ENTRADA DATETIME,                        
    HORA_SAIDA DATETIME,                          
    FOREIGN KEY (FUNCIONARIO_ID) REFERENCES Funcionarios(FUNCIONARIO_ID)
);
CREATE TABLE USUARIOS (
    USUARIOS_ID INT IDENTITY(1,1) PRIMARY KEY,
	LOGIN NVARCHAR(50),
	SENHA NVARCHAR(50)
);
